<!doctype html>
<html>
<head>
    <link rel="stylesheet" href="/css/materialize.css">
    <link rel="stylesheet" href="/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <script type="text/javascript" src="/js/jquery.min.js"></script>
    <script type="text/javascript" src="/js/materialize.js"></script>
</head>
<body>
<div class="container">
    <nav class="navigator">
        <div class="nav-wrapper">
            <ul class="right">
                <li>
                    <a href="/">
                        <span class="fa fa-share-alt"></span>
                        <span>Repos</span>
                    </a>
                </li>
                <li class="active">
                    <a href="/settings">
                        <span class="fa fa-cogs"></span>
                        <span>Settings</span>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="row">
        <div class="col s12">
            <form action="/settings/save" method="post">
                <div class="card-panel grey lighten-5 z-depth-1">
                    <div class="row">
                        <div class="input-field col s6">
                            <input
                                    placeholder="User Name"
                                    id="jira_user" type="text"
                                    name="jira['user']"
                                    class="validate"
                                    value="{{  jira.user }}"/>
                            <label for="jira_user">Jira User Name</label>
                        </div>
                        <div class="input-field col s6">
                            <input
                                    placeholder="User's Password"
                                    id="jira_password"
                                    type="password"
                                    name="jira[password]"
                                    class="validate"
                                    value="{{  jira.password }}"/>
                            <label for="jira_password">Jira User's Password</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input
                                    placeholder="Host Name"
                                    id="jira_host"
                                    type="text"
                                    name="jira[host]"
                                    class="validate"
                                    value="{{  jira.host }}"/>
                            <label for="first_name">Jira Host Name</label>
                        </div>
                        <div class="input-field col s6">
                            <input
                                    placeholder="Cache TTL"
                                    id="jira_password"
                                    type="text"
                                    name="jira[cacheTTL]"
                                    class="validate"
                                    value="{{  jira.cacheTTL }}"/>
                            <label for="jira_password">Jira Cache TTL</label>
                        </div>
                    </div>
                </div>

                <div class="card-panel grey lighten-5 z-depth-1">
                    <div class="row">
                        <div class="input-field col s4">
                            <input placeholder="Repo Name" id="repo_name" type="text" name="repoNames[]" class="validate">
                            <label for="repo_name">Repo Name</label>
                        </div>

                        <div class="input-field col s8">
                            <input placeholder="Repo Path" id="repo_path" type="text" name="repoPaths[]" class="validate">
                            <label for="repo_path">Repo Path</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s10">
                        </div>
                        <div class="col s2">
                            <a class="waves-effect waves-light btn"><i class="fa fa-plus"></i> Add</a>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col s12">
                        <ul class="collection with-header">
                            <li class="collection-header"><h4>Repos</h4></li>
                            {% for repo, path in repos %}
                            <li class="collection-item">
                                <input type="hidden" name="repoNames[]" value="{{ repo }}">
                                <input type="hidden" name="repoPaths[]" value="{{ path }}">
                                <div title="{{ path }}">
                                    {{ repo }}
                                    <a href="#!" class="secondary-content"><i class="fa fa-trash-o"></i></a>
                                </div>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>

                <div class="card-panel grey lighten-5 z-depth-1">
                    <div class="row">
                        <div class="col s5"></div>
                        <div class="col s2">
                            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                                <i class="fa fa-floppy-o"></i>
                            </button>
                        </div>
                        <div class="col s5"></div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

</body>
</html>